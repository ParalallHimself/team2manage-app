{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NextGeTech CRM",
  "version": "0.1.0",
  "identifier": "com.nextgetech.team2manage.crm",
  "build": {
    "frontendDist": "../public"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "url": "https://app.team2manage.com/login",
        "visible": false,
        "fullscreen": false,
        "resizable": true,
        "title": "NextGeTech CRM"
      },
      {
        "label": "login",  
        "url": "/login.html", 
        "decorations": false,
        "center": true,
        "width": 450, 
        "height": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}